---
import { Image } from "astro:assets";
const {
  members: { title, description, member_list },
} = Astro.props;
---

<section class="section">
  <div class="container">
    <div class="row">
      <div class="mx-auto text-center lg:col-6">
        <h2>{title}</h2>
        <p class="mt-4 text-lg text-gray-600 mx-auto text-center lg:col-6">
          {description}
        </p>
      </div>
    </div>
    <div class="row mt-12 justify-center">
      <div class="lg:col-10">
        <div class="row">
          {member_list.map((item: any) => (
            <div class="mb-6 flex flex-col px-6 text-center sm:col-6 lg:col-4 sm:items-center">
              <div class="member-avatar inline-flex justify-center">
                <Image
                  height={112}
                  width={112}
                  class="rounded-full h-28 w-28"
                  src={item.image}
                  alt={item.name}
                />
              </div>
              <div class="mt-6 w-full flex-1 rounded-xl bg-white px-4 py-8 shadow-lg text-left">
                <h5 class="font-primary text-lg">{item.name}</h5>
                <p class="mt-1.5 font-semibold text-sm text-gray-700">{item.field}</p>
                {item.affiliations && (
                  <p class="mt-1 text-sm italic text-gray-500">{item.affiliations}</p>
                )}
                {item.bio && (
                  <div class="mt-4 text-sm leading-relaxed text-gray-800 space-y-3">
                    {item.bio.split("\n\n").map((paragraph: string) => (
                      <p class="mt-3">{paragraph}</p>
                    ))}
                  </div>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
